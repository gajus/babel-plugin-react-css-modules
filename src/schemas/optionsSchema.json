{
  "additionalProperties": false,
  "properties": {
    "context": {
      "type": "string"
    },
    "exclude": {
      "type": "string"
    },
    "filetypes": {
      "additionalProperties": false,
      "patternProperties": {
        "\\..*": {
          "additionalProperties": false,
          "properties": {
            "plugins": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "syntax": {
              "type": "string"
            }
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "generateScopedName": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "typeof": "function"
        }
      ]
    },
    "removeImport": {
      "type": "boolean"
    },
    "webpackHotModuleReloading": {
      "type": "boolean"
    },
    "handleMissingStyleName": {
      "enum": ["throw", "warn", "ignore"]
    }
  },
  "type": "object"
}
